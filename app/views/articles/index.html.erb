
<div class="container">
	<%if seller_signed_in? %>
	<%= link_to 'new article', new_article_path, class: 'btn btn-primary'%>
	<%end%>

	<div class="row">
		<% @article.each do |article|%>

		<div class="col-md-4 mb-3">
			<%= link_to article_path(article) do %>
			<div class="card">
				<div class="card-body">
			<%if article.image.attached?%>		
				<%= image_tag (article.image), class: 'img-fluid' %>
				<%else%>
				<img src="/dummy.jpg" class="img-fluid">
			<%end%>
			<h1>	<%= article.title%></h1>
			<p> <%=article.description%></p>
			<small><%= article.seller.name%></small>
		
				<%#= link_to 'edit', edit_article_path(article), class: 'btn btn-primary' %>
				<%#= link_to 'delete', article_path(article), class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?'} %>
			
				<%#= link_to 'show', article_path(article), class: 'btn btn-primary'%>
		
			
			
			
		</div>
		</div>
		<%end%>
		</div>
		<%end%>
	</div>
</div>

 

