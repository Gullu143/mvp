<div class="container">
	<div class="col-md-5 mx-auto card card-body">
		<%= form_with model: @article do |f| %>
			<%= f.hidden_field :seller_id, value: @seller.id %>
			<%=f.label :title%>
			<%=f.text_field :title, class: 'form-control'%>
			<%=f.label :description%>
			<%=f.text_area :description, class: 'form-control'%>
			<%=f.label :article_image%>
			<%=f.file_field :image, class: 'form-control'%>
			<%= f.select :status, Article.statuses.keys %>
			<center><%=f.submit 'New Article', class: 'btn btn-primary mt-3'%></center>
		<%end%>
	</div>
</div>